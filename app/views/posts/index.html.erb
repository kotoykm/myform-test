<div class="mt-5">
    <h1>Publicaciones del blog</h1>
    <% @post.each do |u| %>
        <hr>
        <div class="row">
            <div class="col-8">
                <h3><%= u.title %></h3>
                <p><%= u.content%></p>
            </div>
            <div class="col-4"><img src="<%= u.url%>" alt="img" class="w-100"></div>
        </div>
    <%end%>
</div>